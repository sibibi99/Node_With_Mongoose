<% include header %>
  <div class="container">
  <div class="jumbotron text-center">
    <h1 class="display-3">Danh sách dữ liệu</h1>
    <p class="lead">Từ Mongod</p>
    <hr class="my-2">
    <table class="table table-striped table-hover table-inverse table-bordered">
      <thead class="thead-inverse">
        <tr>
          <th>Tên</th>
          <th>Tuổi</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function(nguoidung){ %>
        <tr>
          <td scope="row"><%= nguoidung.ten %></td>
          <td><%= nguoidung.tuoi %></td>
          <td>
          <a href= "/sua/<%= nguoidung._id%>"><i class="fa fa-edit"></i> </a>
          /
          <a onClick = "return xoaAlern('Ban co chac muon xoa khong?')" href= "/xoa/<%= nguoidung._id%>"><i class="fa fa-remove"></i></a>           
           
           </td>
        </tr>
        
  <% }) %>
      </tbody>
    </table>
  </div>

<% include footer %>